        //2.数组排序 (冒泡排序)
        var arr1 = [10, 2, 423, 12, 1, 9];
        arr1.sort(function (a, b) {   //
            return a - b;          //升序
            // return b - a;          //降序
        });
        console.log(arr1);
    </script>
