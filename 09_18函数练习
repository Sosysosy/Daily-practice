        //4.用户输入一个数判断是否为素数（只能被1和自身整除的数），并弹出返回值。
        let num = prompt();
        let sum = 0;
        const know = (x) => {
            for (let i = 1; i <= num; i++) {
                if (x % i == 0) {
                    sum++;
                }
            }
            if (sum == 2) {
                return true;
            } else {
                return false;
            }

        }
        alert(know(num));
