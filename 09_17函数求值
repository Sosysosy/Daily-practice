        //2.利用函数求任意一个数组中的最大值。
        const getArrMax = (arr) => {
            let max = 0;
            for (var i = 0; i <= arr.length - 1; i++) {
                if (arr[i] > max) {
                    max = arr[i];
                }
            }
            return max;
        }
        console.log(getArrMax([2,1,6,0,9]));
    </script>
