    <title>Document</title>
    <script>
        //有一个包含工资的数组[1500,1200,2000,2100,2800,1800],要求把数组中工资超过2000的删除，剩余的放到新数组里面
        var money = [2000,1500, 1200, 2000, 2100, 2800, 1800,1000];
        var arr = [];
        var i = money.length;
        while (i != 0) {
            if (money[0] <= 2000) {
                arr.push(money[0]);
                money.shift();
            } else {
                money.shift();
            }
            i--;
        }
        console.log(arr);
    </script>
