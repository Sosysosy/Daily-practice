    <title>Document</title>
    <script>

        //1.利用函数求任意两数之和。
        function SUM(min, max) {  //ES6可以通过箭头函数代替 function
            let sum = 0;         //函数体内部声明的局部变量为形参，形参接收实参 函数定义
            for (let i = min; i <= max; i++) {
                sum += i;
            }
            return sum;

        }
        console.log(SUM(1, 1000));   //实参 函数调用 


        //2.利用函数求任意两个数之间的和。
        //ES6箭头函数
        const getSum = (x, y) =>  x + y; 
        console.log(getSum(2,90));
        
        //箭头函数两数之间的和。
        // const SUM = (x, y) => {
