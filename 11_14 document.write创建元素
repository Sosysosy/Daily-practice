    <button>点击</button>
    <p>abc</p>
    <script>
        //1.document.write() 创建元素 如果页面文档流加载完毕，再调用这句话会导致页面重绘
        var btn=document.querySelector('button');
        btn.onclick=function(){
            document.write('<div>123</div>');
        }
    </script>
