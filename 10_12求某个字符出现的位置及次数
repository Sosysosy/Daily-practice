    <script>
        //查找字符串'ajfsiaslfjsal'中所有s出现的位置及次数
        var str = 'ajfsiaslfjsal';
        var index = str.indexOf('s');
        var i = 0;
        while (index != -1) {
            console.log(index);
            i++;
            index = str.indexOf('s', index + 1);
        }
        console.log('出现的次数：'+i);
    </script>
