    <script>
        function getSum(sum, x, y) {
            switch (sum) {
                case 1:
                    return x + y;
                    break;
                case 2:
                    return x - y;
                    break;
                case 3:
                    return x * y;
                    break;
                case 4:
                    return x / y;
                    break;
                case 5:
                    break;
            }
        }
        var sle = parseFloat(prompt('1.加\n2.减\n3.乘\n4.除\n5.退出'));
        var first = parseFloat(prompt('第一个数'));
        var second = parseFloat(prompt('第二个数'));

        alert(getSum(sle, first, second));
    </script>
