<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script>
        //1.replace()    只能替换一个
        var str = 'abcd';
        console.log(str.replace('b', 'c'));
        console.log(str);

        //完成对字符串中所有同一个字符s的替换
        var str1 = 'afsdvsdwafefas';
        while (str1.indexOf('s') != -1) {
            str1 = str1.replace('s', '+');
        }
        console.log(str1);

        //2.split('分隔符')
        var str2='abcdefg';
        console.log(str2.split('d'));

        //3.other
        //toUpperCase() 转换大写
        var str3='abc';
        console.log(str3.toUpperCase());
        //toLowerCase() 转换小写
        var str4='ABC';
        console.log(str4.toLowerCase());
    </script>
</head>

